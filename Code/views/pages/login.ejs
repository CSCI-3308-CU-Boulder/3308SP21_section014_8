<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="card-group w-auto ml-5 mr-5 mb-5">
<div class="card">
<div class="card-body mb-3">
<form action="/login/register">
  <div class="form-group row">
    <label class="col col-form-label" for="fullName">Full Name</label>
    <div class="col">
      <input type="text" class="form-control" name="fullName" id="fullName"  placeholder="Enter Name">
    </div>
  </div>
  <div class="form-group row">
    <label class="col col-form-label"  for="emailAddress">Email address</label>
    <div class="col">
      <input type="email" class="form-control" name="emailAddress" id="emailAddress" placeholder="Enter email">
    </div>
  </div>
  <div class="form-group row">
    <label  class="col col-form-label" for="passwordFirst">Password</label>
    <div class="col">
      <input type="password" class="form-control" id="passwordFirst" name="passwordFirst" placeholder="Password">
    </div>
  </div>
  <div class="form-group row">
    <label  class="col col-form-label" for="passwordConfirm">Confirm Password</label>
    <div class="col">
      <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" placeholder="Confirm Password">
    </div>
  </div>
  <fieldset class="form-group">
    <div class="row" id="visitor_type">
      <legend class="col-form-label col pt-0">What's on your feet?</legend>
      <div class="col">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="activity" value="">
        <label class="form-check-label" for="activity">
        Downhill Skis
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="activity" value="">
        <label class="form-check-label" for="activity">
        Cross Country Skis/Nordic
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="activity" value="">
        <label class="form-check-label" for="activity">
        Freestyle Snowboard
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="activity" value="">
        <label class="form-check-label" for="activity">
        Freeride Snowboard
        </label>
      </div>
      </div>
    </div>
    <div class="row mt-3" id="resort_days">
      <legend class="col-form-label col pt-0 w-auto">When do you like to hit the slopes?</legend>
      <div class="col">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="snowday" value=1>
        <label class="form-check-label" for="snowday">
        Sunday
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="snowday" value=2>
        <label class="form-check-label" for="snowday">
        Monday
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="snowday" value=3>
        <label class="form-check-label" for="snowday">
        Tuesday
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="snowday" value=4>
        <label class="form-check-label" for="snowday">
        Wednesday
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="snowday" value=5>
        <label class="form-check-label" for="snowday">
        Thursday
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="snowday" value=6>
        <label class="form-check-label" for="snowday">
        Friday
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="snowday" value=7>
        <label class="form-check-label" for="snowday">
        Saturday
        </label>
      </div>
      </div>
    </div>
    </fieldset>
    </form>
  </div>
  <div>
    <input type="submit" value="Submit" class="btn btn-dark btn-block w-75 mx-auto">
  </div>
</form>
</div>
<div class="card">
  <div class="card-body">
  <form action="/login/login" method="get">
    <div class="form-group row">
      <label class="col col-form-label" for="username">Username</label>
      <div class="col">
        <input type="text" class="form-control mx-n3" name="username" id="username"  placeholder="Enter Username">
      </div>
    </div>
    <div class="form-group row">
      <label  class="col col-form-label " for="login">Password</label>
      <div class="col">
        <input type="password" class="form-control mx-n3" id="password" name="password" placeholder="Password">
      </div>
    </div>
    <% if(!valid) { %> <p class="text-danger text-center">Invalid username or password.</h4> <% } %> 
    </div>
      <div>
        <input type="submit" value="Submit" class="btn btn-dark btn-block w-75 mx-auto">
      </div>
    </form>
  </div>
  </div>
</div>
</div>
<%- include('../partials/footer') %>
